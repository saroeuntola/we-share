# =========================================
# 1. Enable Rewrite Engine
# =========================================
RewriteEngine On

# =========================================
# 2. Force extensionless URLs for .php
# =========================================
# Redirect /file.php → /file
RewriteCond %{THE_REQUEST} \s([^\s]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# Internally map /file → /file.php (if exists)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# =========================================
# 3. Deny access to sensitive files
# =========================================
<FilesMatch "\.(env|ini|log|bak|sql|git|htaccess)$">
    Require all denied
</FilesMatch>

# =========================================
# 4. Prevent directory listing
# =========================================
Options -Indexes

# =========================================
# 5. Block common exploit patterns (Safe for Googlebot)
# =========================================
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\\) [NC,OR]
    RewriteCond %{QUERY_STRING} (etc/passwd|boot.ini|\.ini|\.log) [NC,OR]
    RewriteCond %{QUERY_STRING} (\%27)|(\')|(\-\-)|(\%23)|(#) [NC,OR]
    RewriteCond %{QUERY_STRING} (\%3C)|(<)|(\%3E)|(>) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# =========================================
# 6. Strong Security Headers + Fake Tech
# =========================================
<IfModule mod_headers.c>
    # Spoof backend as React JS
    Header set X-Powered-By "React JS"

    # Security headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=15552000; includeSubDomains; preload"

    # Content Security Policy (CSP)
    Header always set Content-Security-Policy "default-src 'self'; \
        script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdn.tailwindcss.com https://cdnjs.cloudflare.com https://code.jquery.com https://cdn.quilljs.com https://www.google-analytics.com/analytics.js; \
        style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdn.tailwindcss.com https://cdnjs.cloudflare.com https://cdn.quilljs.com https://fonts.googleapis.com; \
        img-src 'self' data: https://cdnjs.cloudflare.com https://www.google-analytics.com https://img.f369w.com https://cdn-icons-png.flaticon.com; \
        font-src 'self' data: https://cdnjs.cloudflare.com https://fonts.gstatic.com; \
        object-src 'none'; frame-ancestors 'self'; base-uri 'self';"

    # Permissions policy
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
</IfModule>

# =========================================
# 7. Enable Gzip Compression (Performance)
# =========================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# =========================================
# 8. SEO-Friendly Robots and Sitemap
# =========================================
# Ensure robots.txt exists in root
# Googlebot allowed to crawl all pages by default

# Optional: Force canonical URLs (prevents duplicate content)
<IfModule mod_rewrite.c>
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^\s]+)\.php [NC]
    RewriteRule ^ %1 [R=301,L]
</IfModule>

# =========================================
# 9. Custom 404 Page
# =========================================
ErrorDocument 404 /404.php
